<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
  </head>
  <body>
    <header class="header">
      {{ page.header }}
      {{ first_module_variable }}
      {{ first_module_variable_second }}
      <br />
      <div class="heading">
        <h1>Welcome</h1>
      </div>
      <nav class="menu">
        {{ page.menu }}
      </nav>
    </header>
    <main class="main">
      <div id="react-app">React app loads here</div>

      <div class="content">
        {{ page.content }}
        {{ first_module_variable }}
      </div>
      {% if page.sidebar %}
      <div class="sidebar"></div>
      {% endif %}
    </main>

    <footer class="footer">
      {{ page.footer }}
      {{ first_module_variable_second }}
    </footer>
  </body>
</html>
